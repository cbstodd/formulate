<h1>Projects</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.title %></td>
        <td><%= link_to 'Show', project, class: '' %></td>
        <td><%= link_to 'Edit', edit_project_path(project), class: 'b' %></td>
        <td><%= link_to 'Delete', project, method: :delete,
                        data: { confirm: 'Are you sure you want to delete?' },
                        class: ''
        %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
